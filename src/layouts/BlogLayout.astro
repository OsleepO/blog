---
const { frontmatter } = Astro.props;
---

<main class="lg:w-1/2 w-full p-4">
  <header class="flex flex-col">
    <h1
      class="w-full mt-12 text-light-title dark:text-violet-200 font-bold text-4xl text-center"
    >
      {frontmatter.title}
    </h1>
    <div class="flex justify-center">
      <time class="text-xm"
        >{new Date(frontmatter.date).toLocaleDateString()}</time
      > &nbsp; - &nbsp;
      <ul>
        {frontmatter.tags.join(" - ")}
      </ul>
    </div>
  </header>
  <article class="mt-8 dark:prose-invert prose prose-lg max-w-none mb-8">
    <slot />
  </article>
</main>